<aside class="col-md-12">
  <div class="mb-4 d-flex">
    <div class="mt-3">
      <h3>
      <span class="font-weight-bold p-2"><%= @user.id %></span>
      <%= @user.name %>
    </h3>
    <h3>
      <%= @user.email %>
    </h3>
    </div>
  </div>
</aside>
<div class="container">
  <div class="row">
  <div class ="bg-light border rounded col-12">
    <h2 class="border-bottom m-0 text-center">Created Events</h2>
    <% @user.created_events.each do |event| %>
    <div class="d-flex border row">
      <h5 class="border-right p-2 m-0"><%= event.id %></h5>
      <h5 class="p-2 m-0"><%= event.event_date %></h5>
      <h5 class="p-2 border-left m-0"><%=event.desc%> </h5>
    </div>
    <% end %>
  </div>
</div>
</div>
