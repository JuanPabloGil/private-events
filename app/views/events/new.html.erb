<div>
  <h1 class="text-center mb-5" >Create a new Event</h1>
  <%= form_for @event do |f| %>
  <%= f.label "Set the date and time of your event " %><br>
  <span><%= f.date_field :event_date, as: :date, value: f.object.try(:strftime,"%c"), class: 'form-control date-form' %>  </span>
  <span><%= f.time_field :event_date, value: f.object.try(:strftime,"%c"), class: 'form-control date-form' %></span>
  <br>
  <%= f.label "Give us a description of your event " %>
  <br>
  <%= f.text_area :desc,  class: 'form-control daye-form'%>
  <br>
  <%= f.submit 'Create Event', class: 'btn btn-dark'%>
  <% end %>
</div>
